<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Check-In/Check-Out</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <h1 class="text-center">Hotel Reservation System</h1>

    <div class="row mt-5">
        <!-- Check-In Form -->
        <div class="col-md-6">
            <h3>Check-In</h3>
            <form id="checkin-form">
                <div class="form-group">
                    <label for="checkin-reservation-id">Reservation ID</label>
                    <input type="text" class="form-control" id="checkin-reservation-id" required>
                </div>
                <button type="submit" class="btn btn-primary">Check In</button>
            </form>
            <div id="checkin-result" class="mt-3"></div>
        </div>

        <!-- Check-Out Form -->
        <div class="col-md-6">
            <h3>Check-Out</h3>
            <form id="checkout-form">
                <div class="form-group">
                    <label for="checkout-reservation-id">Reservation ID</label>
                    <input type="text" class="form-control" id="checkout-reservation-id" required>
                </div>
                <div class="form-group">
                    <label for="checkout-amount">Amount</label>
                    <input type="text" class="form-control" id="checkout-amount" required>
                </div>
                <button type="submit" class="btn btn-primary">Check Out</button>
            </form>
            <div id="checkout-result" class="mt-3"></div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>
    $(document).ready(function() {
        // Check-In Form Submission
        $('#checkin-form').submit(function(event) {
            event.preventDefault();
            const reservationId = $('#checkin-reservation-id').val();

            $.post('/checkin', { reservationId: reservationId }, function(data) {
                $('#checkin-result').html('<div class="alert alert-success">' + data.message + '</div>');
            }).fail(function(jqXHR) {
                $('#checkin-result').html('<div class="alert alert-danger">' + jqXHR.responseJSON.message + '</div>');
            });
        });

        // Check-Out Form Submission
        $('#checkout-form').submit(function(event) {
            event.preventDefault();
            const reservationId = $('#checkout-reservation-id').val();
            const amount = $('#checkout-amount').val();

            $.post('/checkout', { reservationId: reservationId, montant: amount }, function(data) {
                $('#checkout-result').html('<div class="alert alert-success">' + data.message + '</div>');
            }).fail(function(jqXHR) {
                $('#checkout-result').html('<div class="alert alert-danger">' + jqXHR.responseJSON.message + '</div>');
            });
        });
    });
</script>

</body>
</html>
