<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Page Professionnelle</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome -->
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
      rel="stylesheet"
    />
    <!-- Animate.css -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />

    <style>
      /* Custom CSS */
      /* Styling for the header */
      .btn-annuler {
        color: #fff;
        background-color: #dc3545;
        border-color: #dc3545;
        transition: all 0.3s ease; /* Transition douce pour le survol */
      }
      .btn-annuler:hover {
        background-color: #c82333;
        border-color: #bd2130;
        transform: scale(1.05); /* Légère augmentation de taille au survol */
      }
      .btn-annuler1 {
        margin-top: 12px;
        color: #fff;
        background-color: #042beed2;
        border-color: #042beed2;
        transition: all 0.3s ease; /* Transition douce pour le survol */
      }
      .btn-annuler1:hover {
        background-color: #042beed2;
        border-color: #042beed2;
        transform: scale(1.05); /* Légère augmentation de taille au survol */
      }
      header {
        background-color: #4caf50; /* Couleur de fond verte */
        color: #fff;
        padding: 20px 0;
        text-align: center;
        margin-bottom: 30px; /* Marge inférieure pour séparer le titre du reste du contenu */
      }

      /* Styling for the Navbar */
      .navbar {
        background-color: #333; /* Couleur de fond du Navbar */
      }

      .navbar-brand {
        color: #fff !important; /* Couleur du texte du titre de la Navbar */
        font-size: 24px; /* Taille de police du titre */
      }

      /* Styling for the main content */
      body {
        background-color: #f2f2f200; /* Couleur de fond du corps */
        color: #333; /* Couleur du texte principal */
      }

      /* Styling for the reservation table */
      #reservationTable th {
        background-color: #4caf50; /* Couleur de fond de l'en-tête de la table */
        color: #fff; /* Couleur du texte de l'en-tête de la table */
      }

      #reservationTable tbody tr:hover {
        background-color: #ddd; /* Couleur de fond lors du survol sur une ligne */
      }

      /* Centrer le titre */
      h1 {
        text-align: center;
      }
    </style>
  </head>
  <body>
    <header class="animate__animated animate__fadeInDown">
      <h1>Bienvenue sur notre Page Chambres</h1>
    </header>
    <% if (suprimerchamb.length>0) { %>
    <div
      style="width: 20%; margin-left: 40%"
      class="alert alert-info text-center vali flash-message"
    >
      <%= suprimerchamb %>
    </div>

    <% } %>
    <div class="container animate__animated animate__fadeIn">
      <h2>Liste des Chambres</h2>
      <table
        id="reservationTable"
        class="table table-striped table-bordered text-center"
      >
        <thead>
          <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>image</th>
            <th>Prix</th>
            <th>status</th>
          </tr>
        </thead>
        <tbody>
          <% result.forEach(result => { %>
          <tr>
            <td><%= result.id %></td>
            <td><%= result.name %></td>
            <td>
              <img src="<%= result.image_url %> " width="32%" height="105vh" />
            </td>
            <td><%= result.prix %>$</td>
            <td>
              <form action="/Admine-annulerchambres" method="post">
                <input type="hidden" name="annuler" value="<%= result.id%>" />
                <button type="submit" class="btn btn-annuler">Annuler</button>
              </form>
              <a href="/Admine-update<%= result.id %>" class="btn btn-annuler1"
                >update</a
              >
            </td>
          </tr>

          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Bootstrap JS and jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="flache.js"></script>
    <script>
      // Fonction pour déclencher les animations lorsqu'un élément entre en vue
      function animateOnScroll() {
        var elements = document.querySelectorAll(".animate__animated");
        elements.forEach(function (element) {
          var animation = element.dataset.animation || "fadeIn"; // Animation par défaut
          var offset = element.dataset.offset || "50"; // Offset de déclenchement

          // Fonction pour vérifier si l'élément est visible à l'écran
          function isElementInViewport(el) {
            var rect = el.getBoundingClientRect();
            return (
              rect.top >= 0 - parseInt(offset) &&
              rect.left >= 0 &&
              rect.bottom <=
                (window.innerHeight || document.documentElement.clientHeight) +
                  parseInt(offset) &&
              rect.right <=
                (window.innerWidth || document.documentElement.clientWidth)
            );
          }

          // Fonction pour déclencher l'animation lorsque l'élément entre en vue
          function checkAnimation() {
            if (isElementInViewport(element)) {
              element.classList.add("animate__" + animation);
            } else {
              element.classList.remove("animate__" + animation);
            }
          }

          // Vérifier l'animation lorsque la page est chargée et défile
          window.addEventListener("load", checkAnimation);
          window.addEventListener("scroll", checkAnimation);
        });
      }

      // Appeler la fonction pour déclencher les animations sur le scroll
      animateOnScroll();
    </script>
  </body>
</html>
